                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": false,
                            "subscribe": true
                        },
                        "disclose": {
                            "caller": false,
                            "publisher": false
                        },
                        "cache": true
                    }]
                },
                {
                    "name": "localhost",
                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": true,
                            "subscribe": true
                        },
                        "disclose": {
