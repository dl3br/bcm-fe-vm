{
    "version": 2,
    "controller": {},
    "workers": [{
        "type": "router",
        "realms": [{
            "name": "realm1",
            "roles": [{
                    "name": "relayer",
                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": true,
                            "subscribe": true
                        },
                        "disclose": {
                            "caller": false,
                            "publisher": false
                        },
                        "cache": true
                    }]
                },
                {
                    "name": "public",
                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": false,
                            "subscribe": true
                        },
                        "disclose": {
                            "caller": false,
                            "publisher": false
                        },
                        "cache": true
                    }]
                }
            ]
        }],
        "transports": [{
            "type": "web",
            "endpoint": {
                "type": "tcp",
                "port": 8080
            },
            "options": {
               "enable_webstatus": false,
               "max_frame_size": 1048576,
               "max_message_size": 1048576,
               "auto_fragment_size": 65536,
               "fail_by_drop": true,
               "open_handshake_timeout": 2500,
               "close_handshake_timeout": 1000,
               "auto_ping_interval": 10000,
               "auto_ping_timeout": 5000,
               "auto_ping_size": 4
            },
            "paths": {
                "private": {
                    "type": "websocket",
                    "auth": {
                        "wampcra": {
                            "type": "static",
                            "users": {
                                "relayer": {
                                    "secret": "relayer",
                                    "role": "relayer"
                                }
                            }
                        }
                    }
                },
                "ws": {
                    "type": "websocket",
                    "auth": {
                        "anonymous": {
                            "type": "static",
                            "role": "public"
                        }
                    }

                }
            }
        }]
    }]
}
